@model Customer
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="Customers">Customers</a></li>
    <li class="breadcrumb-item active" aria-current="page">Register</li>
  </ol>
</nav>

<h4>Register New Customer</h4>
<form method="post" class="row g-3">
  <div asp-validation-summary="All"></div>

    <div class="col-md-6">
      <label asp-for="@Model.CompanyName" class="form-label">Customer</label>
      <input asp-for="@Model.CompanyName" class="form-control" placeholder="Company Name" />
      <div id="customerNameHelp" class="form-text">*Required</div>
    </div>
    <div class="col-6">
      <label asp-for="@Model.Address" class="form-label">Address</label>
      <input asp-for="@Model.Address" type="text" class="form-control" id="inputAddress" placeholder="">
    </div>
    <div class="col-md-6">
      <label asp-for="@Model.City" class="form-label">City</label>
      <input asp-for="@Model.City" type="text" class="form-control" id="inputCity">
    </div>
    <div class="col-md-6">
      <label asp-for="@Model.Region" class="form-label">Region</label>
      <input asp-for="@Model.Region" type="text" class="form-control" id="inputRegion">
    </div>
    <div class="col-md-6">
      <label asp-for="@Model.Country" class="form-label">Country</label>
      <input asp-for="@Model.Country" type="text" class="form-control" id="inputCountry">
    </div>
    <div class="col-md-6">
      <label asp-for="@Model.PostalCode" class="form-label">Postal Code</label>
      <input asp-for="@Model.PostalCode" type="text" class="form-control" id="inputPostal">
    </div>
    <div class="col-md-6">
      <label asp-for="@Model.Phone" class="form-label">Phone</label>
      <input asp-for="@Model.Phone" type="tel" class="form-control" id="inputPhone">
      @* pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" *@
    </div>
    <div class="col-md-6">
      <label asp-for="@Model.Fax" class="form-label">Fax</label>
      <input asp-for="@Model.Fax" type="text" class="form-control" id="inputFax">
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>



